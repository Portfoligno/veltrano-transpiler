// Variable declaration examples
fun main() {
    // Immutable variable with type annotation
    val immutable_var: Str = "Hello"
    println("{}", immutable_var)
    
    // Type inference
    val inferred = "World"
    println("{}", inferred)
    
    // Different types
    val number: I64 = 42
    val flag: Bool = true
    val empty: Unit = Unit  // Unit literal
    
    println("Number: {}", number)
    println("Flag: {}", flag)
}
